# ==============================
# Localhost MVP environment file
# ==============================
# Copy this to .env.local for Next.js runtime and to .env for Prisma CLI commands.

# PostgreSQL (local Docker compose default)
DATABASE_URL="postgresql://esg_user:esg_password@localhost:5432/esg_pathfinder?schema=public"

# Authentication
JWT_SECRET="replace-with-a-random-32-char-minimum-secret"
JWT_EXPIRES_IN="24h"

# NextAuth compatibility (optional in current cookie flow, kept for library compatibility)
NEXTAUTH_SECRET="replace-with-a-random-32-char-minimum-secret"
NEXTAUTH_URL="http://localhost:5000"

# App / server
NODE_ENV="development"
PORT="5000"
CORS_ORIGIN="http://localhost:5000,http://localhost:3000"

# Optional AI service
Z_AI_API_KEY=""
Z_AI_BASE_URL="https://api.z-ai.dev"
